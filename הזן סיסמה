    <br>
    <button onclick="checkPassword()">שלח</button>
</div>

<!-- דף שלום (כאשר הסיסמה שגויה) -->
<div id="helloPage">
    <h1 id="helloMessage">שלום</h1>
    <p>הסיסמה שגויה, אתה יכול לנסות שוב או להשתמש בכלים הבאים:</p>
    <button onclick="backToLogin()">חזור להזנת סיסמה</button>
    
    <!-- מחשבון -->
    <div id="calculator">
        <h2>מחשבון</h2>
        <input type="number" id="num1" placeholder="מספר 1" />
        <select id="operation">
            <option value="add">+</option>
            <option value="subtract">-</option>
            <option value="multiply">*</option>
            <option value="divide">/</option>
        </select>
        <input type="number" id="num2" placeholder="מספר 2" />
        <button class="calc-button" onclick="calculate()">חשב</button>
        <p id="result"></p>
    </div>
</div>

